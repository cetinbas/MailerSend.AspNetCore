<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<Version>1.0.0</Version>
		<TargetFrameworks>net6.0;net7.0;net8.0</TargetFrameworks>
		<Description>ASP.NET Core library for MailerSend</Description>
		<Authors>Vassilis Panos</Authors>
		<Copyright>Copyright Â© 2022 Vassilis Panos</Copyright>
		<GeneratePackageOnBuild>False</GeneratePackageOnBuild>
		<PackageTags>MailerSender;Mail</PackageTags>
		<RepositoryUrl>https://github.com/vassilis-panos/MailerSend.AspNetCore</RepositoryUrl>
		<PackageProjectUrl>https://github.com/vassilis-panos/MailerSend.AspNetCore</PackageProjectUrl>
		<PackageLicenseFile>LICENSE.md</PackageLicenseFile>
		<PackageId>MailerSend.AspNetCore</PackageId>
		<AssemblyName>MailerSend.AspNetCore</AssemblyName>
		<RootNamespace>MailerSend.AspNetCore</RootNamespace>
		<Product>MailerSend.AspNetCore</Product>
		<Company />
		<LangVersion>latest</LangVersion>
		<Nullable>enable</Nullable>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\..\LICENSE.md">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
		<None Include="..\..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />
	  <PackageReference Include="Microsoft.Extensions.Http" Version="6.0.0" />
	  <PackageReference Include="Microsoft.Extensions.Options" Version="6.0.0" />
	</ItemGroup>
</Project>
